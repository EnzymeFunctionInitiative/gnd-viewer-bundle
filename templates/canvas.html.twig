
<main class="main-content bg-white">
    <div id="error-overlay" class="d-none">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>

    <div class="gnd-svg-pane">
        <svg width="100%" height="400" preserveAspectRation="xMinYMin"
            {{ stimulus_controller(gnd.canvas) }}
            {{ stimulus_action(gnd.app, 'initializeApp@window', 'initializeCanvas', gnd.canvas) }}
            {{ stimulus_action(gnd.app, 'newDiagrams@window', 'renderBatch', gnd.canvas) }}
            {{ stimulus_action(gnd.app, 'finishedBatchRetrieval@window', 'finalizeRender', gnd.canvas) }}
        >
        </svg>
    </div>
</main>

