
{% set canvas_name = gnd.canvas|replace({'/': '--', '_': '-'}) %}

<main class="main-content bg-white">
    <div id="error-overlay" class="d-none">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>

    <div class="gnd-svg-pane">
        <svg width="100%" height="400" preserveAspectRation="xMinYMin"
            id="{{ gnd.svg_canvas_container_id }}"
            {{ stimulus_controller(gnd.canvas) }}
            data-{{ canvas_name }}-main-app-id-value="{{ gnd.main_app_container_id }}"
            {{ stimulus_action(gnd.canvas, 'initializeCanvas', gnd.app ~ ':initializeApp@window')|stimulus_action(gnd.canvas, 'renderBatch', gnd.app ~ ':newDiagrams@window')|stimulus_action(gnd.canvas, 'finalizeRender', gnd.app ~ ':finishedBatchRetrieval@window') }}
        >
        </svg>
    </div>
</main>

