
<div class="position-absolute p-0 border border-secondary rounded border-2 bg-light d-none info-popup"
    data-controller="efi--gnd-viewer-bundle--gnd-info-popup"
    data-efi--gnd-viewer-bundle--gnd-info-popup-metadata-url-value="{{ app_config.sequence.metadataUrl|default }}"
    data-action="
        efi-gnd-global:arrowClick@window->efi--gnd-viewer-bundle--gnd-info-popup#handleArrowClick
        efi-gnd-global:arrowMouseOver@window->efi--gnd-viewer-bundle--gnd-info-popup#handleArrowOver
        efi-gnd-global:arrowMouseOut@window->efi--gnd-viewer-bundle--gnd-info-popup#handleArrowOut
        "
>
    <div class="d-flex align-items-center border-bottom">
        <span class="px-2 py-1 mr-5" data-efi--gnd-viewer-bundle--gnd-info-popup-target="idDisplay"></span>
        <div class="d-flex ms-auto">
            {% if show_metadata_button|default(true) %}
                <button
                        data-action="click->efi--gnd-viewer-bundle--gnd-info-popup#openMetadataPage"
                        class="btn btn-link border-0"
                        aria-label="Metadata Tool"
                        data-controller="tooltip"
                        data-bs-toggle="tooltip"
                        data-placement="top"
                        title="View metadata">
                    <i class="bi bi-box-arrow-up-right"></i>
                </button>
            {% endif %}
            <button
                    data-action="click->efi--gnd-viewer-bundle--gnd-info-popup#copyToClipboard"
                    class="btn btn-link border-0"
                    aria-label="Copy to clipboard"
                    data-controller="tooltip"
                    data-bs-toggle="tooltip"
                    data-placement="top"
                    title="Copy to clipboard">
                <i class="bi bi-clipboard"></i>
            </button>
        </div>
    </div>
    <div class="p-2">
        <div>Description: <span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="description"></span></div>
        <div>Annotation Status: <span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="status"></span></div>
        <div>Organism: <span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="organism"></span></div>
        <div class="info-popup-group">
            <div class=""><b>Pfam</b></div>
            <div><span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="pfam"></span></div>
        </div>
        <div class="info-popup-group" data-efi--gnd-viewer-bundle--gnd-info-popup-target="interproGroup">
            <div class=""><b>InterPro</b></div>
            <div><span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="interpro"></span></div>
        </div>
        <div class="info-popup-group">Sequence Length: <span class="info-popup-value" data-efi--gnd-viewer-bundle--gnd-info-popup-target="length"></span></div>
    </div>
</div>

